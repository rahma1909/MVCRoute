@using demo.BLL.DTOs.Employee
@using demo.DAL.Common.Enums
@model EmployeeDetailsDto
@{
    ViewData["Title"] = "Details";
}

<h1>Employee Details</h1>

<br />
<br />

<ul class="nav nav-tabs" id="departmentTabs" role="tablist">
    <li class="nav-item" role="presentation">
        <a class="nav-link active" id="general-tab" data-bs-toggle="tab" href="#general" role="tab" aria-controls="general" aria-selected="true">General</a>
    </li>

    <li class="nav-item" role="presentation">
        <a class="nav-link" id="adminstration-tab" data-bs-toggle="tab" href="#adminstration" role="tab" aria-controls="adminstration" aria-selected="false">Administration</a>
    </li>
</ul>

<div class="tab-content mt-3" id="mytabcontent">
    @* General tab content *@
    <div class="tab-pane fade show active p-4 border" id="general" role="tabpanel" aria-labelledby="general-tab">
        <div class="row">
            <div class="form-group col-6">
                <label class="col-form-label" asp-for="Name"></label>
                <input asp-for="Name" class="form-control" readonly />
            </div>

            <div class="form-group col-6">
                <label class="col-form-label" asp-for="Email"></label>
                <input asp-for="Email" class="form-control" readonly />
            </div>

            <div class="form-group col-6">
                <label class="col-form-label" asp-for="Address"></label>
                <input asp-for="Address" class="form-control" readonly />
            </div>

            <div class="form-group col-6">
                <label class="col-form-label" asp-for="Age"></label>
                <input asp-for="Age" class="form-control" readonly />
            </div>


            <div class="form-group col-6">
                <label class="col-form-label" asp-for="Salary"></label>
                <input asp-for="Salary" class="form-control" readonly />
            </div>


            <div class="form-group col-6">
                <label class="col-form-label" asp-for="Phone"></label>
                <input asp-for="Phone" class="form-control" readonly />
            </div>

            <div class="form-group mb-3 col-6">
                <label class="col-form-label" asp-for="EmployeeType">
                    @* for="code" *@


                </label>
                <select asp-for="EmployeeType" disabled asp-items="Html.GetEnumSelectList<EmpType>()" class="form-control">
                    <option value="">
                        select  Employee Type
                    </option>
                </select>


            </div>

            <div class="form-group mb-3 col-6">
                <label class="col-form-label" asp-for="Gendar">
                    @* for="code" *@
                </label>

                @foreach (Gendar genderoption in Enum.GetValues(typeof(Gendar)))
                {
                    <div class="form-check">
                        <input type="radio" class="form-check-input" disabled asp-for="Gendar" value="@genderoption" />
                        <label class="form-check-label" asp-for="Gendar">
                            @genderoption
                        </label>

                    </div>
                }



            </div>



            <div class="form-group col-6">
                <label class="col-form-label" asp-for="HiringDate"></label>
                <input asp-for="HiringDate" class="form-control" readonly />
            </div>


            <div class="form-group mb-3 col-6">


                <div class="form-check">
                    <input type="checkbox" class="form-check-input" disabled asp-for="IsActive" />
                    <label class="form-check-label" asp-for="IsActive">

                    </label>
                </div>

            </div>
            
        </div>
    </div>

    @* Administration tab content *@
    <div class="tab-pane fade p-4 border" id="adminstration" role="tabpanel" aria-labelledby="adminstration-tab">
        <div class="row">
            <div class="form-group col-6">
                <label class="col-form-label" asp-for="CreatedOn"></label>
                <input asp-for="CreatedOn" class="form-control" readonly />
            </div>

            <div class="form-group col-6">
                <label class="col-form-label" asp-for="CreatedBy"></label>
                <input asp-for="CreatedBy" class="form-control" readonly />
            </div>

            <div class="form-group col-6">
                <label class="col-form-label" asp-for="LastModifiedBy"></label>
                <input asp-for="LastModifiedBy" class="form-control" readonly />
            </div>

            <div class="form-group col-6">
                <label class="col-form-label" asp-for="LastModifiedOn"></label>
                <input asp-for="LastModifiedOn" class="form-control" readonly />
            </div>
        </div>
    </div>
</div>

<div class="mt-4">
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-success">Edit</a> |
    <a asp-action="Index" class="btn btn-light">Back To list</a>
</div>
