@using demo.BLL.DTOs.Employee
@using demo.DAL.Common.Enums
@model CreatedEmployeeDto

@{
	var Departments = new SelectList(@ViewData["Departments"] as IEnumerable<DepartmentToReturnDto>, nameof(DepartmentToReturnDto.Id), nameof(DepartmentToReturnDto.Name));
}

<div class="row justify-content-center align-items-center">
	<h1 class="col-8 my-4">create new  Employee</h1>
	<br />
	<br />

	<form asp-action="Create" class="col-8">

		<div asp-validation-summary="ModelOnly">  </div>
		@* //action="/Department/Create" method="post" *@

		<div class="form-group mb-3 col-6 ">
			<label class="col-form-label" asp-for="Name">
				@* for="code" *@

				Name
			</label>
			<input asp-for="Name" class="form-control" />
			@* type="text" name="Code" id="Code" *@


			<span asp-validation-for="Name" class="text-danger"></span>
		</div>


		<div class="form-group mb-3 col-6">
			<label class="col-form-label" asp-for="Age">
				@* for="code" *@

				Age
			</label>
			<input type="" asp-for="Age" class="form-control" />
			@* type="text" name="Code" id="Code" *@


		</div>

		<div class="form-group mb-3  col-6 ">
			<label class="col-form-label" asp-for="Email">
				@* for="code" *@

				Email
			</label>
			<input asp-for="Email" class="form-control" />
			@* type="text" name="Code" id="Code" *@


			<span asp-validation-for="Email" class="text-danger"></span>
		</div>



		<div class="form-group mb-3 col-6">
			<label class="col-form-label" asp-for="Address">
				@* for="code" *@

				Address
			</label>
			<input asp-for="Address" class="form-control" />
			@* type="text" name="Code" id="Code" *@


			@* <span asp-validation-for="Name" class="text-danger"></span> *@
			@* description is optional so there is no validation *@
		</div>




		<div class="form-group mb-3 col-6">
			<label class="col-form-label" asp-for="Salary">
				@* for="code" *@

				Salary
			</label>
			<input type="" asp-for="Salary" class="form-control" />
			@* type="text" name="Code" id="Code" *@


		</div>


		<div class="form-group mb-3 col-6">
			<label class="col-form-label" asp-for="Phone">
				@* for="code" *@

				Phone
			</label>
			<input type="" asp-for="Phone" class="form-control" />
			@* type="text" name="Code" id="Code" *@


		</div>


		<div class="form-group mb-3 col-6">
			<label class="col-form-label" asp-for="DepartmentId">
				@* for="code" *@


			</label>
			<select asp-for="DepartmentId" asp-items="@Departments" class="form-control">
				<option value="@null">
		choose....
				</option>
			</select>




		<div class="form-group mb-3 col-6">
			<label class="col-form-label" asp-for="EmployeeType">
				@* for="code" *@


			</label>
			<select asp-for="EmployeeType" asp-items="Html.GetEnumSelectList<EmpType>()" class="form-control">
				<option value="">
					select  Employee Type
				</option>
			</select>


		</div>

		<div class="form-group mb-3 col-6">
			<label class="col-form-label" asp-for="Gendar">
				@* for="code" *@
			</label>

			@foreach (Gendar genderoption in Enum.GetValues(typeof(Gendar)))
			{
				<div class="form-check">
					<input type="radio" class="form-check-input" asp-for="Gendar" value="@genderoption" />
					<label class="form-check-label" asp-for="Gendar">
						@genderoption
					</label>

				</div>
			}



		</div>

		<div class="form-group mb-3 col-6">
			<label class="col-form-label" asp-for="HiringDate">
				@* for="code" *@

				HiringDate
			</label>
			<input type="date" asp-for="HiringDate" class="form-control" />
			@* type="text" name="Code" id="Code" *@


		</div>


		<div class="form-group mb-3 col-6">


			<div class="form-check">
				<input type="checkbox" class="form-check-input" asp-for="IsActive" />
				<label class="form-check-label" asp-for="IsActive">

				</label>
			</div>

		</div>


		<div class="mt-4">
			<input asp-action="Edit" type="submit" value="save" class="btn btn-success" /> |
			<a asp-action="Index" class="btn btn-light">Back To List</a>
		</div>
	</form>
</div>



@section validationSection{
	<partial name="_ValidationScriptsPartial" />
}

